<Window x:Class="NeeRuler.Views.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeeRuler.Views"
        mc:Ignorable="d"
        Title="DebugWindow" Height="360" Width="800">
    <Grid>
        <Border BorderThickness="2" BorderBrush="Gray" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <Image x:Name="CaptureBitmap" Stretch="None" Source="{Binding CaptureBitmap}">
                <Image.LayoutTransform>
                    <RotateTransform x:Name="CaptureBitmapRotate" />
                </Image.LayoutTransform>
            </Image>
        </Border>
    </Grid>
</Window>
